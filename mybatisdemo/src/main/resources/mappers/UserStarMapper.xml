<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybatisdemos.dao.userstardao.UserStarMapper">

    <insert id="insertUserStar" parameterType="com.mybatisdemos.controller.userstar.request.GenStarVO">
        insert  into star (post_id,user_id) values (#{genStarVO.postId},#{genStarVO.userId})
    </insert>
    <select id="getUserById" resultType="int">
   select count(*) from tab_user where  user_id = #{userId}
    </select>
    <update id="updateUser" parameterType="java.lang.Integer">
    update tab_user set star_num = star_num+1 where user_id = #{userId};
    </update>
    <insert id="insertUserMeg" parameterType="java.lang.Integer">
     insert into tab_user (user_id,star_num) values (#{userId},1);
    </insert>
    <update id="updatePostTable">
      update post set star_num = star_num+1 where post_id = #{postId};
    </update>

    <select id="getStarMap" resultType="com.mybatisdemos.controller.userstar.request.GenStarVO">
      select post_id as postId, user_id as userId from star
    </select>
    <select id="loadUserStarList" resultType="java.lang.Integer">
      select post_id from star where user_id=#{userId}
    </select>
</mapper>